local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()


local Window = Rayfield:CreateWindow({
   Name = "GG HUB",
   Icon = 0, -- Icon in Topbar. Can use Lucide Icons (string) or Roblox Image (number). 0 to use no icon (default).
   LoadingTitle = "GG HUB",
   LoadingSubtitle = "by FebruaryGJB2013",
   ShowText = "Rayfield", -- for mobile users to unhide rayfield, change if you'd like
   Theme = "Default", -- Check https://docs.sirius.menu/rayfield/configuration/themes

   ToggleUIKeybind = "K", -- The keybind to toggle the UI visibility (string like "K" or Enum.KeyCode)

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false, -- Prevents Rayfield from warning when the script has a version mismatch with the interface

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil, -- Create a custom folder for your hub/game
      FileName = "GG HUB"
   },

   Discord = {
      Enabled = false, -- Prompt the user to join your Discord server if their executor supports it
      Invite = "noinvitelink", -- The Discord invite code, do not include discord.gg/. E.g. discord.gg/ ABCD would be ABCD
      RememberJoins = true -- Set this to false to make them join the discord every time they load it up
   },

   KeySystem = false, -- Set this to true to use our key system
   KeySettings = {
      Title = "KEY SYSTEM",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided", -- Use this to tell the user how to get a key
      FileName = "GGHUB133090", -- It is recommended to use something unique as other scripts using Rayfield may overwrite your key file
      SaveKey = true, -- The user's key will be saved, but if you change the key, they will be unable to use your script
      GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
      Key = {"GGHUB133090"} -- List of keys that will be accepted by the system, can be RAW file links (pastebin, github etc) or simple strings ("GGHUB133090","GGHUB133090")
   }
})

local Tab = Window:CreateTab("Tab Example", 4483362458) -- Title, Image

local Button = Tab:CreateButton({
   Name = "Infinite Stamina",
   Callback = function(-- ServerScriptService > InfiniteStaminaAdmin

local Players = game:GetService("Players")

-- âœ… Add your Roblox UserId(s) here
local ADMINS = {
    [2942626356] = true, -- replace with your UserId
    [987654321] = true, -- add more if needed
}

-- Give stamina attributes when player joins
Players.PlayerAdded:Connect(function(player)
    player:SetAttribute("Stamina", 100)
    player:SetAttribute("InfiniteStamina", false)

    -- ðŸ‘€ Simple chat command to toggle infinite stamina
    player.Chatted:Connect(function(msg)
        msg = msg:lower()

        if not ADMINS[player.UserId] then return end

        if msg == "!stamina on" then
            player:SetAttribute("InfiniteStamina", true)
            player:SetAttribute("Stamina", math.huge) -- infinite
            print(player.Name .. " enabled infinite stamina")

        elseif msg == "!stamina off" then
            player:SetAttribute("InfiniteStamina", false)
            player:SetAttribute("Stamina", 100)
            print(player.Name .. " disabled infinite stamina")
        end
    end)
end)

-- Hook into stamina drain
-- (replace this with how your Forsaken stamina system works)
game:GetService("RunService").Heartbeat:Connect(function()
    for _, player in ipairs(Players:GetPlayers()) do
        if player:GetAttribute("InfiniteStamina") then
            -- Always max stamina if infinite
            player:SetAttribute("Stamina", math.huge)
        end
    end
end)
)
   -- The function that takes place when the button is pressed
   end,
})
